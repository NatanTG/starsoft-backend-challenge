# Database
DATABASE_URL=postgresql://ecommerce:ecommerce123@localhost:5432/ecommercedb

# Database credentials (for docker-compose)
POSTGRES_USER=ecommerce
POSTGRES_PASSWORD=ecommerce123
POSTGRES_DB=ecommercedb

# Server
PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Dashboard
DASHBOARD_URL=http://localhost:5173

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
PRODUCTION_CORS_ORIGINS=https://your-production-domain.com

# Database Configuration
DB_LOGGING=true
DB_SYNCHRONIZE=true
DB_SSL=false

# Security
HELMET_HSTS_ENABLED=false

# Email
RESEND_KEY=your-resend-api-key-here
MAIL_FROM_ADDRESS=ecommerce@yourdomain.com

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ecommerce-api
KAFKAJS_NO_PARTITIONER_WARNING=1
# Set to true for development mode (mocks Kafka operations)
KAFKA_MOCK_MODE=false

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# Swagger Configuration
SWAGGER_CONTACT_EMAIL=dev@yourcompany.com

# Zookeeper Configuration
ZOOKEEPER_ALLOW_ANONYMOUS_LOGIN=yes
ZOOKEEPER_SERVER_ID=1
ZOOKEEPER_SERVERS=0.0.0.0:2888:3888

# Kafka Configuration (additional)
KAFKA_BROKER_ID=1
KAFKA_REPLICATION_FACTOR=1
KAFKA_MIN_ISR=1
KAFKA_AUTO_CREATE_TOPICS=true
KAFKA_MESSAGE_MAX_BYTES=1048576

# Elasticsearch Configuration
ELASTICSEARCH_NODE_NAME=elasticsearch
ELASTICSEARCH_CLUSTER_NAME=ecommerce-cluster
ELASTICSEARCH_DISCOVERY_TYPE=single-node
ELASTICSEARCH_MEMORY_LOCK=true
ELASTICSEARCH_SECURITY_ENABLED=false
ELASTICSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=200h
PROMETHEUS_WEB_ENABLE_LIFECYCLE=true

# Grafana Configuration (additional)
GRAFANA_ALLOW_SIGN_UP=false